## Main output
output DP-1 {
	mode 2560x1440@143.998Hz
	pos 1080 2560
	adaptive_sync fullscreen
}

# App and workspace configuration
for_window [app_id="pavucontrol"] floating enable
workspace 4 layout stacking

# Key bindings
bindsym $mod+Shift+p exec toggle-output.sh alsa_output.pci-0000_0a_00.4.analog-stereo alsa_output.pci-0000_08_00.1.hdmi-stereo

# Autostart programs
exec vesktop
exec steam

# SwayFX
blur enable
blur_passes 3
blur_radius 4
blur_saturation 0.8
blur_contrast 1.2
shadows enable
shadows_on_csd enable
shadow_blur_radius 20
shadow_offset 4 8
corner_radius 12
titlebar_separator disable

# Import environment variables and start our custom user session target
exec systemctl --user import-environment SWAYSOCK WAYLAND_DISPLAY DBUS_SESSION_BUS_ADDRESS
exec systemctl --user start sway-session.target
