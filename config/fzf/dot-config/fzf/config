#!/usr/bin/bash

export FZF_CTRL_T_OPTS="--preview '$show_file_or_dir_preview'"
export FZF_ALT_C_OPTS="--preview 'eza --tree --color=always {} | head -200'"

if [[ "$SHELL" == *"bash"* ]]; then
    source /usr/share/fzf/key-bindings.bash
elif [[ "$SHELL" == *"zsh"* ]]; then
    source /usr/share/fzf/key-bindings.zsh
    source /usr/share/fzf/completion.zsh
fi

# Find in manual
fman() {
    man -k . | fzf -q "$1" --prompt='man> '  --preview $'echo {} | tr -d \'()\' | awk \'{printf "%s ", $2} {print $1}\' | xargs -r man | col -bx | bat -l man -p --color always' | tr -d '()' | awk '{printf "%s ", $2} {print $1}' | xargs -r man
}

# Find file and open in nvim
fe() {
    IFS=$'\n' files=($(fzf-tmux --query="$1" --multi --select-1 --exit-0))
    [[ -n "$files" ]] && ${EDITOR:-nvim} "${files[@]}"
}
#bind '"\C-t": "fe\n"'

# Find emoji
femo() {
    emojis=$(cat ~/.local/share/emoji.txt)
    selected_emoji=($(echo "$emojis" | fzf-tmux --query="$1" --multi --select-1 --exit-0 | awk '{print $1}' ))
    wl-copy "$selected_emoji"
}
bindkey -s '\ee' '^ufemo^M'
# Advanced customization of fzf options via _fzf_comprun function
# - The first argument to the function is the name of the command.
# - You should make sure to pass the rest of the arguments to fzf.
_fzf_comprun() {
  echo "Command: $command" >&2  # Debug output
  local command=$1
  shift

  case "$command" in
    cd)           fzf --preview 'eza --tree --color=always {} | head -200' "$@" ;;
    export|unset) fzf --preview "eval 'echo \${}'"         "$@" ;;
    ssh)          fzf --preview 'dig {}'                   "$@" ;;
    *)            fzf --preview "$show_file_or_dir_preview" "$@" ;;
  esac
}

