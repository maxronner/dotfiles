    preloadindex = true

[advice]
    addEmptyPathspec = false
    statusHints = false

[url "ssh://git@github.com:max-ronner/"]
    insteadOf = "mr:"

[url "ssh://git@github.com:"]
    insteadOf = "gh:"

[pager]
    diff = delta
    branch = false

[branch]
    sort = -committerdate

[commit]
    verbose = true
    template = ~/.config/git/commit-template

[diff]
    context = 3
    renames = copies

[status]
    branch = true
    show-stash = true
    showUntrackedFiles = all

[merge]
    conflictstyle = zdiff3

[init]
	defaultBranch = main

[pull]
    default = current
    rebase = true

[push]
    default = current
    autoSetupRemote = true
    followTags = true

[rebase]
    autoStash = true
    missingCommitsCheck = warn

[tag]
    sort = -taggerdate

[interactive]
    diffFilter = delta --color-only
    singlekey = true

[delta]
    navigate = true    # use n and N to move between diff sections
