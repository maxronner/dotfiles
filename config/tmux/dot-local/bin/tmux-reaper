#!/usr/bin/env bash

sessions=$(tmux ls | fzf --exit-0 --multi)
if [ -z "$sessions" ]; then
  exit $?
fi

for i in $sessions; do
  session_name="${i%%:*}"  # remove everything after the first colon
  if [ -n "$session_name" ]; then
    echo "Killing $session_name"
    tmux kill-session -t "$session_name"
  fi
done
