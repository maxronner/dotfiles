{
  "ghostty": {
    "type": "inline",
    "path": "~/.config/ghostty/config",
    "reload": "~/.config/thememanager/reload-ghostty.sh"
  },
  "neovim": {
    "type": "inline",
    "path": "~/.config/nvim/plugin/colors.lua",
    "reload": "~/.config/thememanager/reload-nvim.sh"
  },
  "tmux": {
    "type": "symlink",
    "source": "tmux/tmux.conf",
    "target": "~/.config/tmux/theme.conf",
    "reload": "tmux source-file ~/.config/tmux/tmux.conf"
  },
  "sway": {
    "type": "symlink",
    "source": "sway/config",
    "target": "~/.config/sway/theme.config",
    "reload": "swaymsg reload"
  },
  "starship": {
    "type": "symlink",
    "source": "starship/starship.toml",
    "target": "~/.config/starship.toml"
  },
  "btop": {
    "type": "inline",
    "path": "~/.config/btop/btop.conf"
  },
  "neomutt": {
    "type": "symlink",
    "source": "neomutt/theme.muttrc",
    "target": "~/.config/neomutt/theme.muttrc"
  },
  "waybar": {
    "type": "symlink",
    "source": "waybar/style.css",
    "target": "~/.config/waybar/style.css"
  },
  "swaylock": {
    "type": "symlink",
    "source": "swaylock/config",
    "target": "~/.config/swaylock/config"
  },
  "bat": {
    "type": "inline",
    "path": "~/.config/bat/config"
  },
  "fzf": {
    "type": "symlink",
    "source": "fzf/profile.sh",
    "target": "~/.config/fzf/profile.sh",
    "reload": "tmux set-environment -g FZF_DEFAULT_OPTS \"$($XDG_CONFIG_HOME/fzf/build-opts.sh)\" ; tmux refresh-client -S",
    "reload_shell": true
  },
  "mako": {
    "type": "symlink",
    "source": "mako/theme.ini",
    "target": "~/.config/mako/theme.ini",
    "reload": "makoctl reload"
  },
  "gtk3": {
    "type": "inline",
    "path": "~/.config/gtk-3.0/settings.ini"
  },
  "gtk4": {
    "type": "inline",
    "path": "~/.config/gtk-4.0/settings.ini"
  },
  "gtk-theme": {
    "type": "cmd"
  },
  "pinentry-gtk": {
    "type": "inline",
    "path": "~/.config/environment.d/gtk.conf",
    "reload": "~/.config/thememanager/reload-pinentry-gtk.sh"
  },
  "tmux-plugins": {
    "type": "tmux-plugins",
    "path": "~/.config/tmux/tmux.conf"
  },
  "foot": {
    "type": "symlink",
    "source": "foot/theme.ini",
    "target": "~/.config/foot/theme.ini",
    "reload": "~/.config/thememanager/reload-foot.sh"
  }
}
